rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2027, 7, 29);
    }
    
    // Produtos
    match /produtos/{produtoId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Vendas
    match /vendas/{vendaId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Unidades
    match /unidades/{unidadeId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Estatísticas Diárias - Apenas leitura para usuários, escrita apenas via Cloud Functions
    match /estatisticas_diarias/{estatisticaId} {
      allow read: if request.auth != null && 
                     resource.data.empresa_id == request.auth.uid;
      allow write: if false; // Apenas Cloud Functions podem escrever
    }

    // Estatísticas Mensais - Apenas leitura para usuários, escrita apenas via Cloud Functions
    match /estatisticas_mensais/{estatisticaId} {
      allow read: if request.auth != null && 
                     resource.data.empresa_id == request.auth.uid;
      allow write: if false; // Apenas Cloud Functions podem escrever
    }

  }
}
